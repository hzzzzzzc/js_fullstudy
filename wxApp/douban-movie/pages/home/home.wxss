.weui-search-bar{
  background-color: #41bd55 !important;
}
.row{
  margin-bottom: 30rpx;
}
.title-wrapper{
  display: flex;
  justify-content: space-between;/*占据左右，中间留白*/
  margin-left: 30rpx;
  align-items: center;
  margin-bottom: 30rpx;
}
.title-wrapper .title{
  font-weight: bold;
  font-size: 34rpx;
}
.title-right{
  display: flex;
  align-items: center;
  margin-right: 30rpx;
}
.title-right .more{
  font-size: 30rpx;
  color: #41bd55;
}
.title-right .arrow{
  width: 12rpx;
  height: 12rpx;
  border: 1px solid #41bd55;
  border-left: none;
  border-top: none;
  transform: rotate(-45deg);
}
.scroll-view_movie{
  height: 402rpx;
  white-space: nowrap;
}
.scroll-view_movie .item{
  margin-left: 20rpx;
}